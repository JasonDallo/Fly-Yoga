<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>{% block title %}Administration{% endblock %}</title>
  {% block stylesheets %}
  <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link rel="stylesheet" type="text/css" href="{{ asset('css/admin/index.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('css/admin/datepicker/datepicker.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('css/admin/datepicker/datepicker.date.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('css/admin/datepicker/datepicker.time.css') }}">

  <link rel="stylesheet" type="text/css" href="{{ asset('css/mdb/css/bootstrap.css') }}">
  <link rel="stylesheet" type="text/css" href="{{ asset('css/mdb/css/mdb.css') }}">
  {% endblock %}
  <script   src="https://code.jquery.com/jquery-1.12.4.min.js"   integrity="sha256-ZosEbRLbNQzLpnKIkEdrPv7lOy9C27hHQ+Xp8a4MxAQ="   crossorigin="anonymous"></script>
  <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
  <div class="demo-layout mdl-layout mdl-js-layout">
    <header class="mdl-layout__header mdl-layout__header">
      <div class="mdl-layout__header-row">
        <img src="">
        <!-- Title -->
        <a href="{{ path('admin_homepage') }}"><span class="mdl-layout-title">Admin Fly-Yoga</span></a>
        <!-- Add spacer, to align navigation to the right -->
        <div class="mdl-layout-spacer"></div>
        <!-- Navigation -->
        <nav class="mdl-navigation">
          <div class="dropdown">
            <button class="btn btn-primary dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Utilisateurs
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <a class="dropdown-item" href="{{ path('getUsers') }}">Inscrits</a>
              <a class="dropdown-item" href="{{ path('getPartners') }}">Partenaires</a>
              <a class="dropdown-item" href="{{ path('getProf') }}">Profs</a>
              <a class="dropdown-item" href="{{ path('showAdmins') }}">Admins</a>
            </div>
          </div>
          <a class="mdl-navigation__link" href="{{ path('getCourses') }}">Cours</a>
          <a class="mdl-navigation__link" href="{{ path('listArticle') }}">Produits</a>
          <a class="mdl-navigation__link" href="{{ path('mails') }}">Mails</a>
          <a class="mdl-navigation__link" href="{{ path('listBlog') }}">Blog</a>
          <a class="mdl-navigation__link" href="">{{ app.user.username }}</a>
          <a class="mdl-navigation__link" href="/logout">Disconnect</a>
        </nav>
      </div>
    </header>
  </div>
  <div class="bodycontent">
    {% block body %}{% endblock %}
  </div>
  {% block javascripts %}
  <script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
  <script defer src="{{asset('js/picker.js')}}"></script>
  <script defer src="{{asset('js/picker.date.js')}}"></script>
  <script defer src="{{asset('js/picker.time.js')}}"></script>
  <script defer src="{{asset('js/datepicker.js')}}"></script>

  <script type="text/javascript" src="{{ asset('css/mdb/js/jquery-2.2.3.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('css/mdb/js/tether.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('css/mdb/js/bootstrap.min.js') }}"></script>
  <script type="text/javascript" src="{{ asset('css/mdb/js/mdb.min.js') }}"></script>
  {% endblock %}
</body>
</html>
